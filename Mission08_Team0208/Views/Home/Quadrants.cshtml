@model List<Mission08_Team0208.Models.Task>

@{
    ViewData["Title"] = "Task Quadrants";
}

<div class="container-fluid mt-3">
    <h1 class="text-center mb-4">Task Quadrants</h1>

    <div class="row mb-4">
        <div class="col-md-6 border border-dark p-3">
            <h3 class="text-center">Quadrant 1: Important / Urgent</h3>
            <div class="task-list">
                @foreach (var task in Model.Where(t => t.Quadrant == 1 && !t.Completed))
                {
                    <div class="card mb-2">
                        <div class="card-body">
                            <h5 class="card-title">@task.TaskTitle</h5>
                            @if (task.DueDate != null)
                            {
                                <p class="card-text"><small>Due: @task.DueDate.Value.ToShortDateString()</small></p>
                            }
                            <div class="btn-group">
                                <a asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this task?')">Delete</a>
                                <a asp-controller="Home" asp-action="MarkComplete" asp-route-id="@task.TaskId" class="btn btn-sm btn-success">Complete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-6 border border-dark p-3">
